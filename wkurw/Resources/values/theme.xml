<resources>
  <style name="CustomTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
    <item name ="android:actionBarStyle">@style/MyActionBar</item>
    <item name="android:windowFullscreen">true</item>
  </style>
  <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
    <item name="android:height">75dp</item>
    <item name="android:displayOptions"></item>
    <item name="android:background">#E2E2E2</item>
    <item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle</item>
  </style>
  <style name="ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">#738182</item>
  </style>
  <style name="AppTheme" parent="@android:Theme.Material.Light">
    <item name="android:windowFullscreen">true</item>
    <item name="android:actionBarSize">0dp</item>
    <item name="android:windowTitleSize">0dp</item>
    <item name="android:colorAccent">#77D065</item>
  </style>
</resources>